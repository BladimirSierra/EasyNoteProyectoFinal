<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyNote.Views.Dashboard" BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout>
         
            
            <Label Text="Fast note" TextColor="Blue" FontSize="30" FontAttributes="Italic" HorizontalTextAlignment="Center"/>
            <Image Source="contents.jpg" HeightRequest="150" WidthRequest="100"/>
            <Image Source="paper.png" HeightRequest="50" WidthRequest="200"/>
            <Label Text="Espere mientras carga la App." TextColor="Blue" FontSize="30" FontAttributes="Italic" HorizontalTextAlignment="Center"/>
            <ActivityIndicator IsRunning="true" WidthRequest="100"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>